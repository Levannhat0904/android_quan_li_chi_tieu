        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/editTextNote"
        android:gravity="center_vertical"
        android:hint="Nhập ghi chú" />

